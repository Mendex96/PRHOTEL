    <header id="main-header" style="position: fixed;top: 0;left: 0;width: 100%;z-index: 1000;padding-top: 0px;padding-bottom: 0px;">
        <div style="display: flex; align-items: center; justify-content: space-between; width: 100%; height: 40px; padding: 0 15px; transition: background-color 0.3s;">
