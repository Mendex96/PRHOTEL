      </header>

      <script>
        window.addEventListener("scroll", function () {
            const header = document.getElementById("main-header");
            const scrollY = window.scrollY;
      
            // Calcular un valor de color dinámico en base al desplazamiento
            const maxScroll = 500; // Máxima cantidad de desplazamiento que consideramos para el color
            let colorIntensity = Math.min(scrollY / maxScroll, 1); // Determina entre 0 y 1 según el scroll
      
            // Calcular los valores de RGB para la transición de #094293 (9, 66, 146) a #333 (51, 51, 51)
            let redColor = Math.floor(9 + (51 - 9) * colorIntensity); // De 9 a 51
            let greenColor = Math.floor(66 + (51 - 66) * colorIntensity); // De 66 a 51
            let blueColor = Math.floor(146 + (51 - 146) * colorIntensity); // De 146 a 51
      
            // Ajusta el color de fondo del header basado en el scroll
            header.style.backgroundColor = `rgb(${redColor}, ${greenColor}, ${blueColor})`; // Valor RGB dinámico
        });
      </script>

